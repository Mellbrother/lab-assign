<div class="d-flex align-items-center">
	<h1>ユーザーの詳細</h1>
	<div class="ml-auto">
		<%= link_to '一覧', admin_users_path, class: 'btn btn-outline-dark' %>
	</div>
</div>

<table class="table">
	<tbody>
      <tr>
      	<th><%= User.human_attribute_name(:name) %></th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th><%= User.human_attribute_name(:email) %></th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
      	<th><%= User.human_attribute_name(:admin) %></th>
        <td><%= @user.admin? ? "あり" : "なし" %></td>
      </tr>
      <tr>
      	<th><%= User.human_attribute_name(:student) %></th>
        <td><%= @user.student? ? "である" : "ではない" %></td>
      </tr>
      <tr>
      	<th><%= User.human_attribute_name(:teacher) %></th>
        <td><%= @user.teacher? ? "である" : "ではない" %></td>
      </tr>
  	</tbody>
</table>
 <%= link_to '編集', edit_admin_user_path, class: 'btn btn-primary mr-3' %>
 <%= link_to '削除', [:admin, @user], method: :delete, data: { confirm: "「#{@user.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
