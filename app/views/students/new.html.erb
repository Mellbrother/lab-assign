<div class="d-flex align-items-center">
	<h1>学生一覧</h1>
	<div class="ml-auto">
		<%= link_to '新規登録', students_path, class: 'btn btn-outline-dark' %>
	</div>
</div>

<%= form_with model: @student, local: true do |f| %>
	<div class="form-group">
		<%= f.label :mynumber, '学籍番号' %>
		<%= f.text_field :mynumber, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :name, '名前' %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :gpa, 'GPA' %>
		<%= f.text_field :gpa, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :gp, 'GP' %>
		<%= f.text_field :gp, class: 'form-control' %>
	</div>
	<%= f.submit '保存', class: 'btn btn-button' %>
<% end %>
