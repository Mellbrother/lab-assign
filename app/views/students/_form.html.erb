<% if flash[:error_messages] %>
	<div class="alert alert-danger">
		<ul>
			<% flash[:error_messages].each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_with model: student, local: true do |f| %>
	<div class="form-group">
		<%= f.label :name, '名前' %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :mynumber, '学籍番号' %>
		<%= f.text_field :mynumber, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :gpa, 'GPA' %>
		<%= f.text_field :gpa, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :gp, 'GP' %>
		<%= f.text_field :gp, class: 'form-control' %>
	</div>
	<%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>
